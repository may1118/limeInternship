/*login*/
.loginViewContainer{
    font-size: 32rpx;
}
.loginViewTop{
    width: 100%;
    height: 1000rpx;
    position: absolute;
    z-index: -1;
}
.loginBgImg{
    width: 100%;
    height: 1000rpx;
    position: absolute;
    z-index: -1;
}
.loginBgInfo{
    font-weight: bolder;
    color: white;
    display: block;
    padding-top: 50rpx;
}
.placeholderStyle{
    color: #ccc;
}
.loginContainer{
    margin: 0 auto;
    width: 70%;
    display: flex;
    flex-direction: column;
    padding-top: 300rpx;
}
.loginGetVerify{
    background-color: rgb(254, 148, 0);
    height: 70rpx;
    line-height: 70rpx;
    font-size: 30rpx;
    color: #fff;
    width: 230rpx;
    margin-bottom: 10rpx;
    align-self: center;
}

.loginInput{
    height: 100rpx;
    margin: 10rpx 0;
    border-bottom: 1px solid #eee;
    display: flex;
}
.loginInputCommon{
    padding-left: 20rpx;
    align-self: center;
}
.loginBtn{
    width: 350rpx;
    background-color: rgb(0, 224, 121);
    color: white;
    margin-top: 100rpx;
}
.disabled{
    background-color: grey;
}
.navToRegister{
    margin-top: 20rpx;
    margin-left: 70%;
}
